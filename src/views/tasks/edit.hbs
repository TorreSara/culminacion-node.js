<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg text-gray-800">

  <h1 class="text-center text-3xl font-bold">Actualizar Tarea</h1>

  {{#each tasks}}
  <form action="" method="POST" class="mt-4">

    <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="Nuevo Titulo" name="title" value="{{title}}">

    <textarea class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white h-40" placeholder="Nuevo Resumen" name="description">{{description}}</textarea>

    <button type="submit" class="rounded-md bg-purple-500 w-full text-lg text-white font-semibold p-2 my-3
      hover:bg-purple-600 focus:bg-purple-700">Actualizar!</button>

  </form>
  {{/each}}

</div>